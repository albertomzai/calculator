{\n  \"api_contract\": {\n    \"ruta\": \"/api/calculate\",\n    \"metodo\": \"POST\",\n    \"descripcion\": \"Calcula una expresión matemática recibida como cadena.\",\n    \"parametros_entrada\": {\"expresion\": \"string\"},\n    \"respuesta_esperada\": {\"result\": \"number\"}\n  },\n  \"contrato_qa_e2e\": {\n    \"display\": \"display\",\n    \"btn-0\": \"btn-0\",\n    \"btn-1\": \"btn-1\",\n    \"btn-2\": \"btn-2\",\n    \"btn-3\": \"btn-3\",\n    \"btn-4\": \"btn-4\",\n    \"btn-5\": \"btn-5\",\n    \"btn-6\": \"btn-6\",\n    \"btn-7\": \"btn-7\",\n    \"btn-8\": \"btn-8\",\n    \"btn-9\": \"btn-9\",\n    \"btn-plus\": \"btn-plus\",\n    \"btn-minus\": \"btn-minus\",\n    \"btn-multiply\": \"btn-multiply\",\n    \"btn-divide\": \"btn-divide\",\n    \"btn-equals\": \"btn-equals\",\n    \"btn-clear\": \"btn-clear\",\n    \"btn-decimal\": \"btn-decimal\"\n  },\n  \"plan\": [\n    {\n      \"etapa\": \"backend\",\n      \"tareas\": [\n        \"Inicializar proyecto Flask con estructura básica.",\n        \"Crear factory `create_app` en backend/__init__.py.",\n        \"Definir Blueprint para '/api/calculate' en routes.py.",\n        \"Implementar endpoint POST que reciba JSON {expresion: string}.\",\n        \"Evaluar expresión de forma segura usando módulo ast y evaluador seguro.\",\n        \"Devolver JSON con clave result y valor numérico.\",\n        \"Agregar manejo de errores y validación del formato de entrada.\",\n        \"Crear requirements.txt con Flask.\",\n        \"Configurar archivo app.py para ejecutar la aplicación.\"\n      ]\n    },\n    {\n      \"etapa\": \"frontend\",\n      \"tareas\": [\n        \"Crear index.html con estructura de calculadora usando CSS Grid.",\n        \"Añadir elemento display con data-testid 'display'.\",\n        \"Agregar botones numéricos 0-9, operadores + - * /, =, C y . con data-testid correspondientes.\",\n        \"Implementar script inline que construya expresión en el display al hacer clic.\",\n        \"Al pulsar '=', enviar POST a '/api/calculate' con JSON {expresion}.\",\n        \"Mostrar resultado devuelto en el display.\"\n      ]\n    },\n    {\n      \"etapa\": \"e2e\",\n      \"tareas\": [\n        \"Crear prueba Cypress que visite index.html, ingrese '5+3', presione '=', y verifique que el display muestra '8'.\"\n      ]\n    }\n  ]\n}